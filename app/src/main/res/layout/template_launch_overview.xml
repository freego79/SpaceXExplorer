<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/template_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:visibility="gone"
    tools:visibility="visible">

    <ImageView
        android:id="@+id/launch_icon"
        android:layout_width="@dimen/item_favorite_crew_image_length"
        android:layout_height="@dimen/item_favorite_crew_image_length"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/name"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        tools:text="Name"
        app:layout_constraintLeft_toRightOf="@+id/launch_icon"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/flight_number"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        tools:text="Flight number"
        app:layout_constraintLeft_toRightOf="@+id/launch_icon"
        app:layout_constraintTop_toBottomOf="@+id/name"/>

    <TextView
        android:id="@+id/success_or_time_count"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textStyle="bold"
        tools:text="T - 2 d 12 h 14 m 45 s"
        app:layout_constraintLeft_toRightOf="@+id/launch_icon"
        app:layout_constraintTop_toBottomOf="@+id/flight_number"/>

</androidx.constraintlayout.widget.ConstraintLayout>